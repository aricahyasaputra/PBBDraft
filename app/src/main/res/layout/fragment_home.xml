<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Home"
    android:padding="18dp"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:text="Halaman utama"
        android:textColor="@color/black"
        android:textSize="28sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_gravity="left"
        app:cardBackgroundColor="@color/light_green"
        app:cardCornerRadius="6dp">
        <ImageView
            android:id="@+id/search_activity"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:padding="10dp"
            android:src="@drawable/ic_search"
            android:background="@drawable/bg_dark_green_rectangle_cornered" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:text="Pencarian"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:background="@drawable/bg_light_green_rectangle_cornered"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="@color/light_green"
        app:cardCornerRadius="6dp">

        <ImageView
            android:id="@+id/map_activity"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:padding="10dp"
            android:src="@drawable/ic_map"
            android:background="@drawable/bg_dark_green_rectangle_cornered"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:text="Pemetaan"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:background="@drawable/bg_light_green_rectangle_cornered"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_gravity="right"
        app:cardBackgroundColor="@color/light_green"
        app:cardCornerRadius="6dp">
        <ImageView
            android:id="@+id/upload_database_activity"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:padding="10dp"
            android:src="@drawable/ic_archive"
            android:layout_gravity="right"
            android:background="@drawable/bg_dark_green_rectangle_cornered"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:text="Eksport dan Import"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textAlignment="center"
            android:background="@drawable/bg_light_green_rectangle_cornered"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="195dp"
        android:layout_gravity="left"
        app:cardBackgroundColor="@color/light_green"
        app:cardCornerRadius="6dp">

        <ImageView
            android:id="@+id/export_pdf_activity"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:padding="10dp"
            android:src="@drawable/ic_pdf_24"
            android:background="@drawable/bg_dark_green_rectangle_cornered"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:text="Eksport PDF"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textAlignment="center"
            android:background="@drawable/bg_light_green_rectangle_cornered"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="195dp"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="@color/light_green"
        app:cardCornerRadius="6dp">

        <ImageView
            android:id="@+id/qr_activity"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:padding="10dp"
            android:src="@drawable/ic_qr"
            android:background="@drawable/bg_dark_green_rectangle_cornered"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:text="QR NOP"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textAlignment="center"
            android:background="@drawable/bg_light_green_rectangle_cornered"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="195dp"
        android:layout_gravity="right"
        app:cardBackgroundColor="@color/light_green"
        app:cardCornerRadius="6dp">
        <ImageView
            android:id="@+id/sejarah_activity"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:padding="10dp"
            android:src="@drawable/ic_person"
            android:background="@drawable/bg_dark_green_rectangle_cornered"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:text="Sejarah"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textAlignment="center"
            android:background="@drawable/bg_light_green_rectangle_cornered"/>
    </androidx.cardview.widget.CardView>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Total Pajak Tertanggung"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/total_pajak_tertanggung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Rp.-"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/text_view_petak_tertanggung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:text="- Petak"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Total Pajak Sudah Terbayar"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"/>
    <TextView
        android:id="@+id/text_view_total_pajak_terbayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Rp.-"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="90dp"/>
    <TextView
        android:id="@+id/text_view_total_petak_terbayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:text="- Petak"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="90dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Total Pajak Belum Terbayar"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="120dp"/>
    <TextView
        android:id="@+id/text_view_total_pajak_belum_terbayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Rp.-"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="150dp"/>
    <TextView
        android:id="@+id/text_view_total_petak_belum_terbayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:text="- Petak"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="150dp"/>
</FrameLayout>